@model TextModel
@{
    ViewData["Title"] = "Sinavlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sinavlar</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kullanıcı</th>
            <th scope="col">Sınav Başlığı</th>
            <th scope="col">Tarihi</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.tabloDizayns)
        {
            <tr>
                <td>@item.SınavId</td>
                <td>@item.KullanıcıAdı</td>
                <td>@item.SınavBaslik</td>
                <td>@item.SınavTarih</td>
                <td><form method="post" action="/Home/SinavEkrani"><input type="submit" class="btn btn-primary" name="@item.SınavId" value="Test Et" /></form></td>
            </tr>
        }
    </tbody>
</table>