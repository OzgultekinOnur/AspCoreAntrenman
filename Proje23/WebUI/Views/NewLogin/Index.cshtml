                                    <span class="group-btn">
                                        <button class="btn btn-primary btn-lg" type="submit">
                                            Login <i class="fa fa-sign-in"></i>
                                        </button>
                                    </span>
                                </div>
                                <div>@ViewBag.LoginMessage</div>
                            </div>
                        </form>
                    </div>
                </div>

