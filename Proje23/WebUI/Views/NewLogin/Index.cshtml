<body>

    <!-- Page Content -->
    <div class="container">
        <div class="row mt-2">
            <div class=" col-md-4 text-center">
                <div class="row">
                    <div class="col-md-12"><img src="/img/Logox.png" alt="" class="w-50"></div>
